{% extends 'base.html.twig' %}

{% block body %}
    <form method="post">
        {% if successRegister %}
            <div class="alert alert-success">Registrierung erfolgreich</div>
        {% endif %}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-group">
            <label for="InputUsername">Username</label>
            <input type="text" value="{{ last_username }}" name="username" id="InputUsername" class="form-control" placeholder="Username" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword">Passwort</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
       <a href="{{ url('register') }}">registrieren</a>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" name="_remember_me" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Speicher mich</label>
        </div>
        <button type="submit" class="btn btn-primary">login</button>
    </form>

{% endblock %}