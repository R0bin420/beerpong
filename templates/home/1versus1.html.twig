{% extends 'base.html.twig' %}


{% block body %}
    <div class="btn-group btn-group-toggle" data-toggle="button">
        <label class="btn btn-primary active">
            <input type="1v1" name="1v1" id="1v1" autocomplete="off" checked>1v1
        </label>
        <label class="btn btn-primary">
            <input type="2v2" name="2v2" id="2v2" autocomplete="off" >2v2
        </label>
        <label class="btn btn-primary">
            <input type="2v1" name="2v1" id="2v1" autocomplete="off" >2v1
        </label>

    </div>
    <form method="post">
        <div class="form-group">
            <label for="Username" for="player1">Team1</label>
            <select class="form-control" name="team1_player1" id="player1">
                <option>Bitte wählen</option>
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.username }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label for="Username" for="player2">Team2</label>
            <select class="form-control" name="team2_player1" id="player2">
                <option>Bitte wählen</option>
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.username }}</option>
                {% endfor %}
            </select>
        </div>
        <button class="btn btn-primary active" role="button" aria-pressed="true">Abfahrt</button>
    </form>
{% endblock %}